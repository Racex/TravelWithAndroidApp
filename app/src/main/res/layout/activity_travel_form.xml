<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TravelFormActivity"
    android:background="#475379">

    <TextView
        android:id="@+id/textView"
        android:layout_width="264dp"
        android:layout_height="29dp"
        android:layout_marginBottom="364dp"
        android:text="Wybierz formę podróży :"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <Button
        android:id="@+id/groupTripButtonOnTravelForm"
        android:layout_width="193dp"
        android:layout_height="48dp"
        android:layout_marginBottom="284dp"
        android:text="Wyjazd grupowy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.314"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/travelWithFriendsButtonOnTravelForm"
        android:layout_width="197dp"
        android:layout_height="54dp"
        android:layout_marginBottom="200dp"
        android:text="Wyjazd ze znajomymi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/hitchHikingButtonOnTravelForm"
        android:layout_width="197dp"
        android:layout_height="53dp"
        android:layout_marginBottom="112dp"
        android:text="Autostop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974" />

    <ImageButton
        android:id="@+id/travelWithFriendsQuestionButtonOnTravelForm"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/questionmark"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.997" />

    <ImageButton
        android:id="@+id/groupTripQuestionButtonOnTravelForm"
        android:layout_width="54dp"
        android:layout_height="48dp"
        android:layout_marginBottom="284dp"
        android:background="@drawable/questionmark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/hitchHikingQuestionButtonOnTravelForm"
        android:layout_width="53dp"
        android:layout_height="52dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/questionmark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971" />


</android.support.constraint.ConstraintLayout>